@model IEnumerable<SCP_Foundation.Models.SCP>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjectClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThreatLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObjectClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThreatLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SCPID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SCPID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SCPID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Index">Back to Main</a>
</div>
